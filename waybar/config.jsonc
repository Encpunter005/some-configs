{
    "layer": "top",
    "position": "top",
    "exclusive": "true",
    "mod": "dock",
    "gtk-layer-shell": true,
    "passthrough": false,
    "spacing": 5,
    "fixed-center": "true",
    "modules-left": [
        "custom/launcher",
        "cpu",
        "memory",
        "custom/notify",
        "network",
        "tray"
        // "custom/cava"
    ],
    "modules-center": [
        "hyprland/workspaces",
        "wlr/taskbar"
    ],
    "modules-right": [
        "custom/updates",
        "custom/wallpaper",
        "backlight",
        "pulseaudio",
        "clock",
        "battery",
        "custom/power"
    ],
    "custom/cava": {
        "tooltip": false,
        "exec": "~/.config/waybar/scripts/cava.sh"
    },
    "pulseaudio": {
